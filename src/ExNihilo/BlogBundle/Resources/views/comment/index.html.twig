{% extends 'base.html.twig' %}

{% block body %}
    <h1>Comments list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Author</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.author }}</td>
                <td>{{ comment.content }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_comment_edit', { 'id': comment.id }) }}">modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_comment_delete', { 'id': comment.id }) }}">supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(comments) }}
    </div>
{% endblock %}
