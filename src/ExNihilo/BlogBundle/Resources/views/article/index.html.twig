{% extends 'ExNihiloPlatformBundle:Back:index.html.twig' %}

{% block content %}
    <h1>Liste des articles</h1>
    <div class="row">
        <table>
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content | slice (0,100) | raw }} ...</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_article_edit', { 'id': article.id }) }}">modifier</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_article_delete', { 'id': article.id }) }}"><span class="supprimer">supprimer</span></a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="navigation">
        {{ knp_pagination_render(articles) }}
    </div>

    <ul style="list-style: none">
        <li>
            <a href="{{ path('admin_article_new') }}">Cr√©er un nouvel article</a>
        </li>
    </ul>
{% endblock %}
