{% extends 'ExNihiloPlatformBundle:Back:index.html.twig' %}

{% block content %}
    <h1>Events list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.content | slice(0,60)}}...</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_event_edit', { 'id': event.id }) }}">modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_event_delete', { 'id': event.id }) }}">supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_event_new') }}">Create a new event</a>
        </li>
    </ul>

    <div class="navigation">
        {{ knp_pagination_render(events) }}
    </div>
{% endblock %}
