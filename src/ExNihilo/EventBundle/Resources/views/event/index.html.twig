{% extends 'ExNihiloPlatformBundle:Back:index.html.twig' %}

{% block content %}
    <h1>Liste des événements</h1>
<div class="flex-columns">
    <div class="row">
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.title }}</td>
                <td>{{ event.content | slice(0,100) | raw }} ...</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_event_edit', { 'id': event.id }) }}">modifier</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_event_delete', { 'id': event.id }) }}"><span class="supprimer">supprimer</span></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>

    <div class="navigation">
        {{ knp_pagination_render(events) }}
    </div>

    <ul style="list-style: none">
        <li>
            <a href="{{ path('admin_event_new') }}">Créer un nouvel événement</a>
        </li>
    </ul>
{% endblock %}
