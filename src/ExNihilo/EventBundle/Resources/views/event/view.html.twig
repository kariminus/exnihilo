{% extends '::base.html.twig' %}

{% block body %}
    <h1>{{ event.title }}</h1>
    <p>{{ event.content | raw }}</p>

    <h2>Liste des inscrits</h2>
    <ul>
        {% for user in event.users %}
            <li>{{ user.username }}</li>
        {% endfor %}
    </ul>
    {% if is_granted('ROLE_USER') and booked is null %}
        <form action="" method="POST" name="book">
            <button type="submit" class="btn btn-lg btn-primary">S'inscrire</button>
        </form>

    {% elseif is_granted('ROLE_USER') and booked is not null %}
        <p>Vous êtes déjà inscrit à cet événement</p>
    {% else %}
            <p>Veuillez vous connecter pour vous inscrire à cet événement</p>
    {% endif %}

{% endblock %}