{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Inscription</h1>

                {{ form_start(form) }}
                {{ form_row(form.username, {
                    'label': 'Nom de votre personnage'
                }) }}
                {{ form_row(form.email) }}
                {{ form_row(form.plainPassword.first, {
                    'label': 'Mot de passe'
                }) }}
                {{ form_row(form.plainPassword.second, {
                    'label': 'Repetez le mot de passe'
                }) }}
                {{ form_row(form.classe) }}
                {{ form_row(form.race) }}
                {{ form_row(form.gender) }}
                {{ form_row(form.isGuildMember) }}
                <button type="submit" class="btn btn-primary" formnovalidate>Register</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}