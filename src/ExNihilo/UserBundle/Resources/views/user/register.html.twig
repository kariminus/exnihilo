{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="holder">
            <div class="holder-content">
                <article class="box-page">
                    <div class="box-beta">
                        <div class="box-content text-center">
                            <h1>Inscription</h1>

                            {{ form_start(form) }}
                            {{ form_row(form.username, {}) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.plainPassword.first, {
                                'label' : false,
                                'attr': {'placeholder': 'Mot de passe'}
                            }) }}
                            {{ form_row(form.plainPassword.second, {
                                'label' : false,
                                'attr': {'placeholder': 'répétez le mot de passe'}

                            }) }}
                            {{ form_row(form.classe) }}
                            {{ form_row(form.race) }}
                            {{ form_row(form.gender) }}
                            {{ form_row(form.isGuildMember) }}
                            <button type="submit" class="btn btn-success" formnovalidate>Valider</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </article>
            </div>
        </div>
    </div>
{% endblock %}