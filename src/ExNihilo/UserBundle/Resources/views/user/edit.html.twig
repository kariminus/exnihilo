{% extends 'ExNihiloPlatformBundle:Back:index.html.twig' %}

{% block content %}
    <h3>Modifier le membre</h3>
    <div class="row text-center">
        {{ form_start(form) }}
        {{ form_row(form.username, {}) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, {
            'label' : false,
            'attr': {'placeholder': 'Mot de passe'}
        }) }}
        {{ form_row(form.classe) }}
        {{ form_row(form.race) }}
        {{ form_row(form.gender) }}
        {{ form_row(form.isGuildMember) }}
        {{ form_row(form.roles) }}

        <div class="cell-1-1 text-align-center"><button type="submit" class="btn btn-success">Modifier</button></div>
        {{ form_end(form) }}
    </div>
    <ul style="list-style: none">
        <li>
            <a href="{{ path('admin_user_index') }}">Retour Ã  la liste des membres</a>
        </li>
    </ul>
{% endblock %}
