{% extends 'ExNihiloPlatformBundle:Back:index.html.twig' %}

{% block content %}
    <h1>User edit</h1>

    {{ form_start(form) }}
    {{ form_row(form.username, {
        'label': 'Nom de votre personnage'
    }) }}
    {{ form_row(form.email) }}
    {{ form_row(form.plainPassword, {
        'label': 'Mot de passe'
    }) }}
    {{ form_row(form.classe) }}
    {{ form_row(form.race) }}
    {{ form_row(form.gender) }}
    {{ form_row(form.isGuildMember) }}
    {{ form_row(form.roles) }}
    <input type="submit" value="Modifier" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('admin_user_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
