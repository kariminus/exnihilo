{% extends 'ExNihiloPlatformBundle:Back:index.html.twig' %}

{% block content %}
    <h1>Modifier le membre</h1>
    <div class="row">
        {{ form_start(form) }}
        {{ form_row(form.username, {}) }}
        {{ form_row(form.email) }}
        {{ form_row(form.plainPassword, {
            'label' : false,
            'attr': {'placeholder': 'Mot de passe'}
        }) }}
        {{ form_row(form.classe) }}
        {{ form_row(form.race) }}
        {{ form_row(form.gender) }}
        {{ form_row(form.isGuildMember) }}
        {{ form_row(form.roles) }}

        <div class="cell-1-1 text-align-center"><input type="submit" value="Modifier"/></div>
        {{ form_end(form) }}
    </div>
    <ul>
        <li>
            <a href="{{ path('admin_user_index') }}">Retour Ã  la liste des membres</a>
        </li>
    </ul>
{% endblock %}
