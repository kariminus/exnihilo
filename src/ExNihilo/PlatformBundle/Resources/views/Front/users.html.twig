{% extends 'base.html.twig' %}

{% block body %}
    <body class="background-dots">
    <div id="wrapper">
        <div class="container">
            <div class="holder">
                <div class="holder-content">
                    <article class="box-page">
                        <div class="box-beta">
                            <div class="box-content">
                                {% for classe in classes %}
                                    <table class="width-full">
                                        <tbody>
                                    <tr>
                                       <td> <img src="{{ asset(classe.imageClasse.webPath) }}"
                                                alt="{{ classe.imageClasse.alt }}"
                                                width="200"
                                        />
                                       </td>
                                        <td>
                                                {{ render(controller(
                                                'ExNihiloPlatformBundle:Members:getUsers',
                                                { 'id': classe.id }
                                                )) }}
                                        </td>
                                    </tr>
                                        </tbody>
                                        </table>
                                {% endfor %}
                            </div>
                        </div>
                    </article>
                </div>

            </div>

        </div>
    </div>
    </body>

{% endblock %}