{% extends 'base.html.twig' %}

{% block body %}
    {% for classe in classes %}
        <li>
            <table>
                <tbody>
                <tr>
                    <td><img
                                src="{{ asset(classe.imageClasse.webPath) }}"
                                alt="{{ classe.imageClasse.alt }}"
                                height="60"
                        /></td>
                    <td>
                        {{ render(controller(
                        'ExNihiloPlatformBundle:Members:getUsers',
                        { 'id': classe.id }
                        )) }}
                    </td>
                </tr>
                </tbody>
            </table>
        </li>

    {% endfor %}
{%  endblock %}
