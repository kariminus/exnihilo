{% extends '::base.html.twig' %}

{% block body %}
    {% for article in articles %}
        <div class="page">
            {% if article.image is not null %}
                <img
                        src="{{ asset(article.image.webPath) }}"
                        alt="{{ article.image.alt }}"
                        height="60"
                />
            {% endif %}
            <h3>{{ article.createdAt | date ("d/m/Y")}}</h3>
            <h1>{{ article.title }}</h1>
            <p>{{ article.content|slice(0,100) }}...
                <a href="{{ path('article_view', {id: article.id }) }}">read more</a></p>
        </div>
    {% endfor %}
    <div class="navigation">
        {{ knp_pagination_render(articles) }}
    </div>

{% endblock %}