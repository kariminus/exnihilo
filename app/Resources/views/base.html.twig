<!DOCTYPE html>
<html class="no-js no-touch" lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="msapplication-TileImage" content="content/live/thumbs/favicon-270x270.png" />
    <title>{% block title %}Ex Nihilo{% endblock %}</title>
    {% block stylesheets %}
        <link rel="icon" href="{{ asset('images/logos/favicon-32x32.png') }}" sizes="32x32" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/demo-switcher.min.css')}}" />
        <link rel="stylesheet" href="{{ asset('css/style-active.min.css')}}" />
        <link rel="stylesheet" href="{{ asset('css/style.css')}}" />
        <link rel="stylesheet" href="{{ asset('css/typo-open-sans-oswald.min.css')}}" />

        <style>
            body {
                background-color: #102A10;
                background-image: url("{{ asset('images/background.jpg') }}");
            }
        </style>
    {% endblock %}
<body class="background-dots">
<div id="container">
    <header id="header" class="ratio-2-1">
        <div class="container">
            <ul style="list-style: none">
            {% if is_granted('ROLE_USER') %}
                <li><a href="{{ path('security_logout') }}">Deconnexion</a></li>
            {% else %}
                <li><a href="{{ path('security_login') }}">Connexion</a><a href="{{ path('user_register') }}" style="margin-left: 10px">Inscription</a></li>
            {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('admin_article_index') }}">Administration du site</a></li>
                {% endif %}
            </ul>
            <div class="main vertical-align-middle horizontal-align-center">
                <div class="logo">
                    <a href="{{ path('ex_nihilo_platform_blog') }}" title="Live">
                        <img src="{{ asset('images/logos/logo-303x103.png')}}" width="303" height="103"
                             srcset="{{ asset('images/logos/logo-303x103.png')}}, {{ asset('images/logos/logo-606x206.png')}} 606w"
                             sizes="(max-width: 303px) 100vw, 303px" alt="Ex nihilo logo"/>
                    </a>
                </div>
                <nav class="back-shadow">
                    <ul>
                        <li><a href="{{ path('ex_nihilo_platform_blog') }}">Blog</a></li>
                        <li><a href="{{ path('ex_nihilo_platform_presentation') }}">La guilde</a></li>
                        <li><a class="media-regular-none-important" href="{{ path('ex_nihilo_platform_members') }}">Les membres</a></li>
                        <li class="media-regular-none-important">
                            <a href="{{ path('ex_nihilo_platform_events') }}">Les événements</a>
                        </li>
                    </ul>
                </nav>
                <nav>
                    <ul>
                        <li><a href="{{ path('ex_nihilo_platform_members') }}">Les membres</a></li>
                        <li><a href="{{ path('ex_nihilo_platform_events') }}">Les événements</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    {% block body %}
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset ('components/jquery/jquery.min.js') }}"></script>
        <script src="{{ asset ( 'js/app.min.js') }}"></script>
        <script src="{{ asset ('js/demo-switcher.min.js') }}"></script>
    {% endblock %}
</div>
<footer>
</footer>
</body>
</html>